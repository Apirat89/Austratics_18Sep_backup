{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/news/refresh",
      "schedule": "*/30 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-RateLimit-Limit",
          "value": "60"
        },
        {
          "key": "X-RateLimit-Window",
          "value": "1m"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_SENTRY_ENVIRONMENT": "production",
    "SENTRY_AUTH_TOKEN": "dummy-token-for-build"
  },
  "buildCommand": "next build",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "devCommand": "next dev",
  "ignoreCommand": "",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "eslint": {
          "ignoreDuringBuilds": true
        },
        "typescript": {
          "ignoreBuildErrors": true
        },
        "framework": "nextjs",
        "buildCommand": "next build",
        "commandOptions": [
          "--no-lint",
          "--no-typecheck"
        ],
        "skipBuildIdentifier": true,
        "skipMiddlewareUrlNormalize": true
      }
    }
  ],
  "rewrites": [
    {
      "source": "/auth/confirm",
      "destination": "/auth/confirm-client"
    },
    {
      "source": "/auth/reset-password",
      "destination": "/auth/reset-password-client"
    }
  ]
} 